{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "target": "ES2020",
    "moduleResolution": "bundler",
    "types": [
      "react",
      "react-native",
      "jest"
    ],
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "app/*"
      ]
    },
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*.d.ts",
    "src",
    "app"
  ],
  "exclude": [
    "backups",
    "logs",
    "tools",
    "**/*.bak.*",
    ".archive",
    "node_modules"
  ]
}
